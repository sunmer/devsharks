{
	"compilerOptions": {
		"lib": ["es2015", "dom"],
		"target": "es5",
		"noImplicitAny": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"outDir": "build/js",
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"experimentalDecorators": true
	},
	"include": [
		"./src/**/*.ts"
	]
}